<%- include('header') %>
<div class="info-form">
    <form action="/submitconfirm" method="post">
        <div class="info-item">
            <label for="name">Username</label>
            <input type="text" name="name" id="username" placeholder="Enter username here"/>
        </div>
        <div class="info-item">
            <label for="phone-number">Phone Number</label>
            <input type=tel" name="phone" id="phonenumber" placeholder="Enter phone number"/>
        </div>
        <div class="info-item">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter a password"/>
        </div>
        <div class="info-item">
            <button type="submit" class="btn">Register</button><button type="clear" class="btn">Clear</button>
        </div>
    </form>
</div>
<%- include('footer') %>